<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity Pagamento.
    -->
    <changeSet id="20210401000005-1" author="jhipster">
        <createTable tableName="pagamento">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome_cliente" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="nome_vendedor" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="marca_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="ano_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="modelo_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="valor_total_carro" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="forma_pagamento" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="parcelas" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="entrada" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
