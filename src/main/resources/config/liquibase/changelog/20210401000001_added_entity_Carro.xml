    <!--
        Added the entity Carro.
    -->
    <changeSet id="20210401000001-1" author="jhipster">
        <createTable tableName="carro">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome_cliente" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="nome_vendedor" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="start_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="end_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="marca_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="ano_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="modelo_carro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="forma_pagamento" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="gnv" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="valor_total_carro" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="entrada" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="valor_parcela" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="parcelas" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="juros" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="rua" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="bairro" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="cidade" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="cep" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
